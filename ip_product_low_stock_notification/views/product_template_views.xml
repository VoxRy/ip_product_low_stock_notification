<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit.low.stock</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='inventory']" position="inside">
                    <group string="Low Stock Notification">
                        <field name="low_stock_notification_enabled"/>
                        <field name="minimum_stock_quantity" attrs="{'invisible': [('low_stock_notification_enabled', '=', False)]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

